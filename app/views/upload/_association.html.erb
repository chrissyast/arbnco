<details>
  <% if association.is_a? ActiveRecord::Associations::CollectionProxy %>
    <summary>
      <%= association.name.capitalize %> ( <%= association.size  %> )
    </summary>
    <ul>
      <% association.each do |a| %>
        <%= render partial: "object", locals: { object: a } %>
      <% end %>
    </ul>
  <% else %>
    <summary>
      <%= association.name.capitalize %> (1)
    </summary>
    <ul>
      <%= render partial: "object", locals: { object: association } %>
    </ul>
  <% end %>
</details>